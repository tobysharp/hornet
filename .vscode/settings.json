    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.default.configurationProvider": "ms-vcscode.cmake-tools",

    // This tells the CMake Tools status bar button how to launch the debugger.
    // It mimics the structure of our launch.json configuration.
    "cmake.debugConfig": {
        "type": "cppdbg",
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ],
        // We can also add args, stopAtEntry, etc. here if needed.
        // Note: "program" and "cwd" are automatically deduced by the extension
        // from the active CMake target, so we don't need to set them here.
    },
   "cmake.useCMakePresets": "auto",
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "${workspaceFolder}/clang20.toolchain.cmake"
    },
 
    // --- C++ TestMate Configuration ---
    "testMate.cpp.test.executables": "${command:cmake.buildDirectory}/hornetlib_tests",
}