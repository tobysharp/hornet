{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++20",
          "-Wall",
          "-Wextra",
          "-O2",
          "main.cpp",  // or replace with your files
          "-o",
          "main"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  