{
  "version": 3,
  "configurePresets": [
    {
      "name": "clang20-debug",
      "displayName": "Clang20 Debug",
      "description": "Clang++-20 Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang20-debug",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-20",
        "CMAKE_CXX_COMPILER": "clang++-20",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/clang20.toolchain.cmake"
      }
    },
    {
      "name": "clang20-release",
      "displayName": "Clang20 Release",
      "hidden": false,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang20-release",
      "description": "Clang++-20 Release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-20",
        "CMAKE_CXX_COMPILER": "clang++-20",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/clang20.toolchain.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang20-debug-all",
      "configurePreset": "clang20-debug"
    },
    {
      "name": "clang20-release-all",
      "configurePreset": "clang20-release"
    }
  ]
}